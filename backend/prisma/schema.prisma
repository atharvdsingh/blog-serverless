generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model users{
  id String @id @default(uuid())
  email String @unique
  password String
  name String?
  posts post[]
  
}

model post{
  id String @id @default(uuid())
  content String
  title String
  publish Boolean @default(false)
  author users @relation(fields: [authorId] ,references: [id])
  authorId String
  
}
